@foreach (var item in Model)
{
               <div class="card" style="background-color: #10444C; color: white">
              <div class="card-header">
                        @Html.DisplayFor(modelItem => item.MessagePost.Title) : @Html.DisplayFor(modelItem => item.MessagePost.Message) - OG Message
              </div>
              <div class="card-body">
                <blockquote class="blockquote mb-0">
                      <p>Reply Content: @Html.DisplayFor(modelItem => item.Reply)</p>
                          <footer class="blockquote-footer" style="color: white">@Html.DisplayFor(modelItem => item.Name)</footer>
                </blockquote>
              </div>

                  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm mr-2"><i class="fa-solid fa-pen-to-square"></i></a>
